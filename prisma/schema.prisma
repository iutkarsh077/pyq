generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model paperSchema {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  pdfName String @default("")
  university String
  subject String
  subjectCode String
  category   String
  year     Int
  semester   Int
  department  String
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
}
